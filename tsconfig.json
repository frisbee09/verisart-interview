{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true
  },
  "include": ["**/*.ts", "**/*.tsx", "types/**/*"],
  "exclude": ["node_modules", "**/node_modules/*/**"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
